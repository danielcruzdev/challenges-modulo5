{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title>editar professor</title>
{% endblock %}

{% block content %}

    <div class="card">
        <section class="teacher-photo" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <form method="POST" action="/teachers?_method=PUT">

                <div class="header-show">
                    <h3>Editar professor</h3>
        
                    <a href="/teachers"><i class="material-icons home-button">home</i></a>
                    <a href="/teachers">Home</a>
        
                </div>

                {% include 'teachers/fields.njk' %}

                <input type="hidden" name="id" value="{{ teacher.id }}"/>
            </form>

            <form id='form-delete' action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{ teacher.id }}"/>
                <button type="submit">Deletar</button>
            </form>

            {% include 'confirmTeacher.njk' %}
        </section>
    </div>

{% endblock content %}