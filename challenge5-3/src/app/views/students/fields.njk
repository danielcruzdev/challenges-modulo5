<div class="item">
    <div>Foto de Perfil</div>
    <div><input type="url" name="avatar_url" placeholder="Copie aqui o link da sua melhor foto!" value="{{ student.avatar_url }}"></div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div><input type="text" name="name" value="{{ student.name }}"></div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div><input type="date" name="birth" value="{{ student.birth }}"></div>
</div>

<div class="item">
    <div>E-mail</div>
    <div><input type="email" name="email" value="{{ student.email }}"></div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input type="number" name="time" value="{{ student.time }}">
    </div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="year">
            <option value="1EM" 
                {% if student.year == "1EM" %} selected="selected" {% endif %}>1&deg; ano Ensino Médio
            </option>
            <option value="2EM" 
                {% if student.year == "2EM" %} selected="selected" {% endif %}>2&deg; ano Ensino Médio
            </option>
            <option value="3EM" 
                {% if student.year == "3EM" %} selected="selected" {% endif %}>3&deg; ano Ensino Médio
            </option>
            <option value="5EF" 
                {% if student.year == "5EF" %} selected="selected" {% endif %}>5&deg; ano Ensino Fundamental
            </option>
            <option value="6EF" 
                {% if student.year == "6EF" %} selected="selected" {% endif %}>6&deg; ano Ensino Fundamental
            </option>
            <option value="7EF" 
                {% if student.year == "7EF" %} selected="selected" {% endif %}>7&deg; ano Ensino Fundamental
            </option>
            <option value="8EF" 
                {% if student.year == "8EF" %} selected="selected" {% endif %}>8&deg; ano Ensino Fundamental
            </option>
            <option value="9EF" 
                {% if student.year == "9EF" %} selected="selected" {% endif %}>9&deg; ano Ensino Fundamental
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <select name="teacher">
            {% for teacher in teacherOptions%}
            <option value="{{teacher.id}}" 
                {% if student.teacher_id == teacher.id %} selected {% endif %}>{{teacher.name}}
            </option>
            {% endfor %}
        </select>
    </div>
</div>


<button type="submit">Salvar</button>